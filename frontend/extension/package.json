{
  "name": "ai-coding-tutor",
  "displayName": "AI Coding Tutor",
  "description": "AI Coding Tutor is a VS Code extension that acts as your personal code mentor. It monitors your coding activity in real-time and offers intelligent, context-aware hints, best practices, and interactive guidance to help you write cleaner, more efficient code while you learn and grow as a developer.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.97.0"
  },
  "categories": [
    "Programming Languages",
    "Education",
    "Snippets",
    "Other"
  ],
  "keywords": [
    "ai",
    "learn",
    "coding",
    "tutor",
    "education"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onView:aiTutorView",
    "onView:aiTutorChat",
    "onCommand:ai-coding-tutor.toggleActivation",
    "onCommand:ai-coding-tutor.askQuery",
    "onCommand:ai-coding-tutor.analyzeCode",
    "onCommand:ai-coding-tutor.explainCode",
    "onCommand:ai-coding-tutor.optimizeCode",
    "onCommand:ai-coding-tutor.getSuggestion",
    "onCommand:ai-coding-tutor.clearSuggestions",
    "onCommand:ai-coding-tutor.exportChatHistory"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "AI Coding Tutor",
      "properties": {
        "aiCodingTutor.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable or disable the AI Coding Tutor extension"
        },
        "aiCodingTutor.backendUrl": {
          "type": "string",
          "default": "http://localhost:8080",
          "description": "URL to the AI Coding Tutor backend service"
        },
        "aiCodingTutor.proficiencyLevel": {
          "type": "string",
          "default": "medium",
          "enum": ["novice", "medium", "expert"],
          "enumDescriptions": [
            "Simple explanations focused on fundamentals",
            "Balanced explanations with more technical details",
            "In-depth technical explanations"
          ],
          "description": "Your programming proficiency level for tailored explanations"
        },
        "aiCodingTutor.autoAnalyzeOnSave": {
          "type": "boolean",
          "default": false,
          "description": "Automatically analyze code on save"
        },
        "aiCodingTutor.showInlineDecorations": {
          "type": "boolean",
          "default": true,
          "description": "Show inline decorations for AI suggestions"
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "aiTutorSidebar",
          "title": "AI Coding Tutor",
          "icon": "media/icon.svg"
        }
      ]
    },
    "views": {
      "aiTutorSidebar": [
        {
          "id": "aiTutorView",
          "name": "AI Tutor",
          "type": "tree",
          "visibility": "visible"
        },
        {
          "id": "aiTutorChat",
          "name": "Ask Questions",
          "type": "webview"
        },
        {
          "id": "aiTutorHistory",
          "name": "Learning History",
          "visibility": "collapsed"
        }
      ]
    },
    "commands": [
      {
        "command": "ai-coding-tutor.toggleActivation",
        "title": "Toggle AI Coding Tutor"
      },
      {
        "command": "ai-coding-tutor.selectLevel",
        "title": "Select Proficiency Level"
      },
      {
        "command": "ai-coding-tutor.askQuery",
        "title": "Ask AI Coding Tutor",
        "icon": "$(comment-discussion)"
      },
      {
        "command": "ai-coding-tutor.openChat",
        "title": "Open AI Coding Tutor Chat",
        "icon": "$(comment-discussion)"
      },
      {
        "command": "ai-coding-tutor.analyzeCode",
        "title": "Analyze Current File",
        "icon": "$(microscope)"
      },
      {
        "command": "ai-coding-tutor.clearSuggestions",
        "title": "Clear AI Suggestions",
        "icon": "$(clear-all)"
      },
      {
        "command": "ai-coding-tutor.explainCode",
        "title": "AI Tutor: Explain Selected Code",
        "icon": "$(book)"
      },
      {
        "command": "ai-coding-tutor.optimizeCode",
        "title": "AI Tutor: Optimize Selected Code",
        "icon": "$(rocket)"
      },
      {
        "command": "ai-coding-tutor.getSuggestion",
        "title": "AI Tutor: Get Code Suggestion",
        "icon": "$(lightbulb)"
      },
      {
        "command": "ai-coding-tutor.showTutorial",
        "title": "Show Tutorial"
      },
      {
        "command": "ai-coding-tutor.exportChatHistory",
        "title": "Export Chat History"
      },
      {
        "command": "ai-coding-tutor.clearChatHistory",
        "title": "Clear Chat History"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "ai-coding-tutor.toggleActivation",
          "when": "view == aiTutorView",
          "group": "navigation"
        },
        {
          "command": "ai-coding-tutor.analyzeCode",
          "when": "view == aiTutorView",
          "group": "navigation"
        },
        {
          "command": "ai-coding-tutor.exportChatHistory",
          "when": "view == aiTutorHistory",
          "group": "navigation"
        }
      ],
      "editor/context": [
        {
          "command": "ai-coding-tutor.explainCode",
          "when": "editorHasSelection && aiCodingTutor.isActive",
          "group": "9_aicodingtutor@1"
        },
        {
          "command": "ai-coding-tutor.optimizeCode",
          "when": "editorHasSelection && aiCodingTutor.isActive",
          "group": "9_aicodingtutor@2"
        },
        {
          "command": "ai-coding-tutor.getSuggestion",
          "when": "aiCodingTutor.isActive",
          "group": "9_aicodingtutor@3"
        }
      ],
      "commandPalette": [
        {
          "command": "ai-coding-tutor.explainCode",
          "when": "aiCodingTutor.isActive"
        },
        {
          "command": "ai-coding-tutor.optimizeCode",
          "when": "aiCodingTutor.isActive"
        },
        {
          "command": "ai-coding-tutor.getSuggestion",
          "when": "aiCodingTutor.isActive"
        }
      ]
    },
    "keybindings": [
      {
        "command": "ai-coding-tutor.askQuery",
        "key": "ctrl+shift+a",
        "mac": "cmd+shift+a",
        "when": "editorTextFocus"
      },
      {
        "command": "ai-coding-tutor.openChat",
        "key": "ctrl+shift+c",
        "mac": "cmd+shift+c",
        "when": "editorTextFocus || editorHasSelection"
      },
      {
        "command": "ai-coding-tutor.explainCode",
        "key": "ctrl+shift+e",
        "mac": "cmd+shift+e",
        "when": "editorHasSelection && aiCodingTutor.isActive"
      },
      {
        "command": "ai-coding-tutor.optimizeCode",
        "key": "ctrl+shift+o",
        "mac": "cmd+shift+o",
        "when": "editorHasSelection && aiCodingTutor.isActive"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/lodash": "^4.17.16",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/node-fetch": "^2.6.12",
    "@types/vscode": "^1.97.0",
    "@typescript-eslint/eslint-plugin": "^8.22.0",
    "@typescript-eslint/parser": "^8.22.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.19.0",
    "ts-loader": "^9.5.2",
    "typescript": "^5.7.3",
    "webpack": "^5.97.1",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "@types/marked": "^5.0.2",
    "lodash": "^4.17.21",
    "marked": "^12.0.2",
    "node-fetch": "^2.7.0"
  }
}
